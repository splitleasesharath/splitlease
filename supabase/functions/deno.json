{
  "tasks": {
    "test": "deno test --allow-env --allow-read",
    "test:coverage": "deno test --allow-env --allow-read --coverage=coverage",
    "test:watch": "deno test --allow-env --allow-read --watch"
  },
  "lint": {
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "./**/*_test.ts"
    ],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "no-unused-vars"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "always"
  },
  "test": {
    "include": ["./**/*_test.ts"],
    "exclude": ["./tests/integration/**"]
  }
}
