# Cloudflare Pages Headers Configuration
# https://developers.cloudflare.com/pages/configuration/headers/

# View Split Lease pages - serve as HTML
/view-split-lease
  Content-Type: text/html; charset=utf-8
/view-split-lease/*
  Content-Type: text/html; charset=utf-8

# Preview Split Lease pages - serve as HTML (uses _internal pattern)
/preview-split-lease
  Content-Type: text/html; charset=utf-8
/preview-split-lease/*
  Content-Type: text/html; charset=utf-8

# Guest Proposals pages - serve as HTML (uses _internal pattern)
/guest-proposals
  Content-Type: text/html; charset=utf-8
/guest-proposals/*
  Content-Type: text/html; charset=utf-8

# Help Center pages - serve as HTML
/help-center
  Content-Type: text/html; charset=utf-8
/help-center/*
  Content-Type: text/html; charset=utf-8

# Search page - serve as HTML (uses _internal pattern)
/search
  Content-Type: text/html; charset=utf-8
/search/*
  Content-Type: text/html; charset=utf-8

# Reset Password page - serve as HTML (uses _internal pattern)
/reset-password
  Content-Type: text/html; charset=utf-8
/reset-password/*
  Content-Type: text/html; charset=utf-8

# Internal files (no extension) - serve as HTML
/_internal/*
  Content-Type: text/html; charset=utf-8

# COMPLETELY DISABLE ALL CACHING

# All routes - no cache
/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# HTML pages - no cache
/*.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Root paths - no cache
/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Static assets - no cache
/assets/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Images - no cache
/assets/images/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Functions - no cache
/functions/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
