# Cloudflare Pages Headers Configuration
# https://developers.cloudflare.com/pages/configuration/headers/

# HTML pages - no cache (force revalidation)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Root paths - no cache
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Static assets - aggressive caching (Vite hash names handle cache busting)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

# Functions
/functions/*
  Cache-Control: no-cache
